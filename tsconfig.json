{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["ESNext"],
        "allowJs": false,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": [
        "./dist/**/*"
    ]
}
